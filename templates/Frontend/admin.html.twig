{% extends 'base.html.twig' %}

{% block title %}
    Admin
{% endblock %}

{% block body %}

    <div class="container">
        <h3>Liste des utilisateurs :</h3>

        <div class="row">
            {% for user in users %}
                <div class="col-lg-6">
                    <div class="card mt-3">
                        <div class="card-body">
                            <h3 class="card-title">{{ user.username }}</h3>
                            <p class="card-text">Email : {{ user.email }}</p>
                            <p>RÃ´le(s) de {{ user.firstName }}</p>
                            <ul>
                                {% for role in user.roles %}
                                    <li>{{ role }}</li>
                                {% endfor %}
                            </ul>
                            <a href="{{ path('user.show', {slug: user.slug, id: user.id}) }}" class="btn btn-primary">Voir son profil</a>
                            <a href="{{ path('user.delete', {slug: user.slug, id: user.id}) }}" class="btn btn-outline-danger">Supprimer le profil</a>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>


{% endblock %}