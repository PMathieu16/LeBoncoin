{% extends 'base.html.twig' %}

{% block title %}
    {{ user.username }}
{% endblock %}

{% block body %}

    <h3 class="text-center">Bienvenue {{ user.username }}  !</h3>

    <form class="text-center" action="{{ path('user.vote', {slug: user.slug, id: user.id}) }}" method="post">
        {% if app.user.id != user.id %}
        <button class="btn btn-success" name="vote" value="up">Vote up</button>
        {% endif %}
        {% if app.user.id != user.id %}
        <button class="btn btn-danger" name="vote" value="down">Vote down</button>
        {% endif %}
        <p class="mt-3">Upvote : {{ user.upVote }}</p>
        <p>DownVote : {{ user.downVote }}</p>
    </form>

    <h4 class="mb-5 mt-5">Annonce(s) de {{ user.username }} :</h4>

    {% for ad in user.ad %}
        <div class="col-lg-6">
            <div class="card mb-3 mt-3">
                <img src="{{ ad.imageName ? vich_uploader_asset(ad, 'imageFile') : "https://www.yateo.com/blog/wp-content/uploads/2020/03/symfony.jpg" }}" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{ ad.title }}</h5>
                    {% for tag in ad.tags %}
                        <p class="badge bg-secondary">{{ tag.title }}</p>
                    {% endfor %}

                    <p class="card-text">{{ ad.description }}</p>
                    <p>Prix : {{ ad.price|round(2, 'floor') }} $</p>
                    <p>Questions pos√© : {{ ad.question|length }}</p>

                    <a href="{{ path('ad.show', {slug: ad.slug, id: ad.id}) }}" class="btn btn-primary">Voir l'annonce</a>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}