{% extends 'base.html.twig' %}

{% block title %}
    {{ user.username }}
{% endblock %}

{% block body %}

    <h3 class="text-center">Bienvenue {{ user.username }}  !</h3>

    <form class="text-center" action="{{ path('app_user_vote', { id: user.id }) }}" method="post">
        {% if app.user.id != user.id %}
        <button class="btn btn-success" name="vote" value="up">Vote up</button>
        {% endif %}
        {% if app.user.id != user.id %}
        <button class="btn btn-danger" name="vote" value="down">Vote down</button>
        {% endif %}
        <p class="mt-3">Upvote : {{ user.upVote }}</p>
        <p>DownVote : {{ user.downVote }}</p>
    </form>

    <h4 class="mb-5 mt-5">Annonce(s) de {{ user.username }} :</h4>

    {% for annonce in user.ad %}
        <div class="col-lg-6">
            <div class="card mb-3 mt-3">
                <img src="{{ annonce.image }}" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{ annonce.title }}</h5>
                    {% for tag in annonce.tags %}
                        <p class="badge bg-secondary">{{ tag.title }}</p>
                    {% endfor %}

                    <p class="card-text">{{ annonce.description }}</p>
                    <p>Prix : {{ annonce.price|round(2, 'floor') }} $</p>
                    <p>Questions pos√© : {{ annonce.question|length }}</p>

                    <a href="/ad/{{ annonce.id }}" class="btn btn-primary">Voir l'annonce</a>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}