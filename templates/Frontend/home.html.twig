{% extends 'base.html.twig' %}

{% block title %}
    Home
{% endblock %}

{% block body %}

    <div class="container">

        {% if app.user %}
            <h2 class="mb-3">
                Bienvenue {{ app.user.firstname }} {{ app.user.lastname }}
            </h2>

            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Ajouter une nouvelle annonce
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            {{ form_start(formAd) }}
                            {{ form_widget(formAd) }}
                            <button type="submit" class="btn btn-primary mt-3">Envoyer</button>
                            {{ form_end(formAd) }}
                        </div>
                    </div>
                </div>
            </div>

        {% endif %}

        <div class="mt-5">
            <form action="{{ path("search_tag") }}">
                <input type="search" placeholder="Search..." name="s" aria-label="Search" value="{{ app.request.query.get('s') | default('') }}">
                <span>
                    Tags :
                    {% for tags in tag %}
                        {{ tags.title }},
                    {% endfor %}
                </span>

            </form>
        </div>

        <div class="row">

            {% for ad in ads|default() %}
                <div class="col-lg-6">
                    <div class="card mb-3 mt-3">
                        <img src="{{ ad.imageName ? vich_uploader_asset(ad, 'imageFile') : "https://www.yateo.com/blog/wp-content/uploads/2020/03/symfony.jpg" }}" class="card-img-top" alt="">
                        <div class="card-body">
                            <p>Publié le {{ ad.createdAt|date("d/m/Y") }}</p>
                            <h3 class="card-title">{{ ad.title }}</h3>
                            {% for tag in ad.tags %}
                                <p class="badge bg-secondary">{{ tag.title }}</p>
                            {% endfor %}

                            <p class="card-text">{{ ad.description }}</p>
                            <p>Prix : <b>{{ ad.price|round(2, 'floor') }} $</b></p>
                            <p>Questions posé : {{ ad.question|length }}</p>

                            {% if app.user %}
                                <a href="{{ path('ad.show', {slug: ad.slug, id: ad.id}) }}" class="btn btn-primary">Voir l'annonce</a>
                                <a href="{{ path('user.show', {slug: ad.user.slug, id: ad.user.id}) }}" class="btn btn-outline-warning">Voir le vendeur</a>
                            {% else %}
                                <p><b><a href="{{ path('login') }}">Connectez-vous</a> pour voir l'annonce</b></p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css">

    <style>
        .accordion-body #ad div {
            display: flex;
            flex-direction: column;
            width: 300px;

        }
    </style>

{% endblock %}

{% block javascripts %}
 <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $("select").select2();
    </script>
{%  endblock %}