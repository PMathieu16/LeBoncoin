{% extends 'base.html.twig' %}

{% block title %}
    Home
{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">LeBonCoin</a>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" href="{{ path("app_connexion") }}">Connexion</a>
                    <a class="nav-link" href="{{ path("app_inscription") }}">Inscription</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">

        {% for tags in tag %}
            <input type="checkbox" class="form-check-input" id="{{ tags.id }}">
            <label class="form-check-label" for="{{ tags.id }}">{{ tags.title }}</label>
        {% endfor %}

        <div class="row">

            {% for annonce in ad %}
                <div class="col-lg-6">
                    <div class="card mb-3 mt-3">
                        <img src="{{ annonce.image }}" class="card-img-top" alt="">
                        <div class="card-body">
                            <h5 class="card-title">{{ annonce.title }}</h5>
                            {% for tag in annonce.tags %}
                                <p class="badge bg-secondary">{{ tag.title }}</p>
                            {% endfor %}
                            <p class="card-text">{{ annonce.description }}</p>
                            <p>Prix : {{ annonce.price|round(2, 'floor') }} $</p>
                            <p>Questions pos√© : {{ annonce.question|length }}</p>
                            <a href="/ad/{{ annonce.id }}" class="btn btn-primary">Voir l'annonce</a>
                            <a href="/user/{{ annonce.user.id }}" class="btn btn-outline-warning">Voir le vendeur</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}